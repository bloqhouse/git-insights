{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "git-insights",
          "region": "europe-west4",
          "pinTag": true
        }
      },
      {
        "source": "/hooks/github/**",
        "run": {
          "serviceId": "git-insights",
          "region": "europe-west4",
          "pinTag": true
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
